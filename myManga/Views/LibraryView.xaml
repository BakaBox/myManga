<UserControl 
    x:Class="myManga.Views.LibraryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="clr-namespace:myManga.Models"
    xmlns:ui="clr-namespace:myManga.UI"
    xmlns:bakabox="clr-namespace:System.Windows.Controls;assembly=BakaBox"
    SnapsToDevicePixels="True" 
    TextElement.FontFamily="Segoe UI">
    <Grid Background="#252525">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListView
            HorizontalContentAlignment="Stretch"
            Background="#252525"
            BorderThickness="1,0,0,0"
            BorderBrush="#555"
            SelectedItem="{Binding Path=CurrentMangaItem, Mode=TwoWay, IsAsync=True}"
            ItemsSource="{Binding Path=MangaItems, IsAsync=True}"
            SelectionMode="Single" Grid.Column="1"
            ScrollViewer.PanningMode="VerticalOnly"
            Style="{StaticResource BalancedWrapListView}"
            ItemContainerStyle="{StaticResource LibraryListViewItem}"/>
        <Expander
            IsExpanded="{Binding Path=DetailsOpen, Mode=TwoWay, IsAsync=True}"
            Background="#252525"
            BorderThickness="0"
            BorderBrush="#111"
            Foreground="White"
            FontSize="16"
            ExpandDirection="Right"
            x:Name="InfoExpander">
            <Expander.Header>
                <TextBlock Margin="1,5"  Text="{Binding Path=CurrentMangaItem.MangaData.Name, FallbackValue=Un-named}">
                    <TextBlock.LayoutTransform>
                        <RotateTransform Angle="270"/>
                    </TextBlock.LayoutTransform>
                </TextBlock>
            </Expander.Header>
            <Border
                DataContext="{Binding Path=CurrentInfo, IsAsync=True}"
                Background="#111"
                TextElement.FontSize="12"
                Grid.Column="1"
                Grid.Row="1"
                Width="336">
                <Grid TextBlock.Foreground="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="18"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <ListBox
                        x:Name="ChapterList"
                        Background="#111"
                        Grid.Row="1"
                        ItemsSource="{Binding Path=ChapterEntries, IsAsync=True}" 
                        HorizontalContentAlignment="Stretch"
                        BorderThickness="0"
                        AlternationCount="2"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.Resources>
                            <Style TargetType="{x:Type ListBoxItem}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                            <Border x:Name="_Item" Margin="0,2" BorderBrush="#222" BorderThickness="1" CornerRadius="3" Padding="2" Background="#555">
                                                <Grid TextBlock.Foreground="White">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel>
                                                        <TextBlock TextWrapping="NoWrap" TextTrimming="CharacterEllipsis">
                                                            <TextBlock.Text>
                                                                <MultiBinding StringFormat="{}v{0} c{1}.{2}">
                                                                    <Binding Path="Volume"/>
                                                                    <Binding Path="Chapter"/>
                                                                    <Binding Path="SubChapter"/>
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                        <TextBlock x:Name="TitleName" Padding="10,0,0,0" FontSize="18" Text="{Binding Path=Name}"/>
                                                    </StackPanel>
                                                    <Button 
                                                    Grid.Column="1"
                                                    Height="24"
                                                    Style="{StaticResource GlowBtn}"
                                                    Command="{Binding Path=DataContext.ReadChapter, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}">
                                                        <StackPanel>
                                                            <Image Source="/myManga;component/Resources/Images/Metro/White/No%20Circle/Layout.png" Margin="-10" Stretch="Uniform" />
                                                            <TextBlock VerticalAlignment="Center" Text="Read"/>
                                                        </StackPanel>
                                                    </Button>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                                    <Setter TargetName="_Item" Property="Background" Value="#666"/>
                                                </Trigger>

                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="_Item" Property="Background" Value="#888"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="_Item" Property="Background" Value="#999"/>
                                                </Trigger>
                                                <DataTrigger Binding="{Binding Path=Name}" Value="">
                                                    <Setter TargetName="TitleName" Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.Resources>
                    </ListBox>

                    <StackPanel>
                        <TextBlock Margin="3,1" TextWrapping="Wrap">
                        <Bold Foreground="LightGray">Alt. Title:</Bold> <Run Text="{Binding Path=AltTitle, FallbackValue=Unknown, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock Margin="3,1" TextWrapping="Wrap">
                        <Bold Foreground="LightGray">Released:</Bold> <Run Text="{Binding Path=Released, FallbackValue=Unknown, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock Margin="3,1" TextWrapping="Wrap">
                        <Bold Foreground="LightGray">Status:</Bold> <Run Text="{Binding Path=Status, FallbackValue=Unknown, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock Margin="3,1" TextWrapping="Wrap">
                        <Bold Foreground="LightGray">Author:</Bold> <Run Text="{Binding Path=Author, FallbackValue=Unknown, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock Margin="3,1" TextWrapping="Wrap">
                        <Bold Foreground="LightGray">Artist:</Bold> <Run Text="{Binding Path=Artist, FallbackValue=Unknown, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock Margin="3,1" TextWrapping="Wrap">
                        <Bold Foreground="LightGray">Genre:</Bold> <Run Text="{Binding Path=Genre, FallbackValue=Unknown, Mode=OneWay}"/>
                        </TextBlock>
                    </StackPanel>

                    <ToggleButton
                        Grid.Column="1" 
                        Grid.RowSpan="2" 
                        IsChecked="{Binding ElementName=InfoExpander, Path=IsExpanded, Mode=TwoWay, IsAsync=True}"
                        BorderThickness="0">
                        <ToggleButton.Background>
                            <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                <GradientStop Color="#111" Offset="0.5" />
                                <GradientStop Color="#555" Offset="1" />
                            </LinearGradientBrush></ToggleButton.Background>
                    </ToggleButton>
                </Grid>
            </Border>
        </Expander>
        <Button 
            HorizontalAlignment="Left" 
            VerticalAlignment="Bottom" 
            SnapsToDevicePixels="True"
            Margin="0,5"
            Style="{StaticResource GlowBtn}" 
            Command="{Binding Path=UpdateLibrary}">
            <Border 
                TextElement.Foreground="White" 
                TextElement.FontSize="12" 
                Background="#00FFFFFF" 
                BorderBrush="White" 
                BorderThickness="2" 
                CornerRadius="9" 
                Padding="0,0,5,0">
                <Border.LayoutTransform>
                    <RotateTransform Angle="270"/>
                </Border.LayoutTransform>
                <StackPanel Orientation="Horizontal">
                    <Image 
                        Source="/myManga;component/Resources/Images/Metro/White/No Circle/refresh.png" 
                        Stretch="Uniform" 
                        Height="21" 
                        Margin="-2"/>
                    <TextBlock Text="Refresh" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Button>
    </Grid>
</UserControl>
